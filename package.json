{
  "name": "devnest",
  "version": "0.1.0",
  "description": "A desktop application for managing and organizing local development projects. DevNest helps developers quickly access, organize, and launch their projects from a central interface.",
  "main": "electron/main.mjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:preview": "npm run build && cross-env NODE_ENV=production electron ."
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "ahooks": "^3.9.0",
    "antd": "^5.26.2",
    "rc-virtual-list": "^3.19.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.11",
    "uninstall": "^0.0.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.4",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "postcss": "^8.5.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0"
  },
  "build": {
    "appId": "com.devnest.app",
    "productName": "DevNest",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  },
  "keywords": [
    "project-management",
    "frontend",
    "developer-tools",
    "electron",
    "react",
    "typescript",
    "vite"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gwoncher/devnest"
  },
  "bugs": {
    "url": "https://github.com/gwoncher/devnest/issues"
  },
  "homepage": "https://github.com/gwoncher/devnest#readme",
  "private": false
}
